LIBS=-lraylib -lopengl32 -lgdi32 -lwinmm -lstdc++fs

CXXFLAGS=-std=c++2a -Wall -pedantic -Wformat -I C:\Users\itara\CHECKOUT\raylib\src -L C:\Users\itara\CHECKOUT\raylib\src

BIN=jumper

SRC=$(wildcard src/*.cpp) $(wildcard src/shared/*.cpp)
SRC:=$(filter-out src/level_editor.cpp, $(SRC))

OBJ=$(addsuffix .o,$(basename $(SRC)))

all: executable

debug: CXXFLAGS += -DDEBUG -g
debug: executable

executable: $(OBJ)
	$(CXX) -o $(BIN) $^ $(CXXFLAGS) $(LIBS)

# Level editor:

LE_BIN = level_editor
LE_SRC = src/level_editor.cpp $(wildcard src/shared/*.cpp)

LE_OBJ=$(addsuffix .o,$(basename $(LE_SRC)))

le_executable: $(LE_OBJ)
	$(CXX) -o $(LE_BIN) $^ $(CXXFLAGS) $(LIBS)

le: le_executable

clean:
	del .\src\*.o
	del .\src\*.out
	del .\src\shared\*.o

clean_all: clean
	del .\$(BIN)
	del .\$(LE_BIN)
